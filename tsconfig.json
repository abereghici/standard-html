{
  "compilerOptions": {
    "lib": [
      "ES2021",
      "esnext"
    ],
    "module": "ES2022",
    "moduleResolution": "node",
    "target": "ES2020",
    "types": [],
    "alwaysStrict": true,
    "composite": true,
    "emitDeclarationOnly": true,
    "isolatedModules": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "strict": true,
    "useUnknownInCatchVariables": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [],
  "references": [
    {
      "path": "packages/core"
    }
  ]
}
